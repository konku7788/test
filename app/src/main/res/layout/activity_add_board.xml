<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addBoardActivity">

    <TextView
        android:id="@+id/addBoardHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24sp"
        android:layout_marginLeft="10dp"
        android:text="글 작성"
        android:fontFamily="@font/medium"
        android:textColor="@color/colormain"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="제목을 작성해주세요."
        android:fontFamily="@font/medium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"
        android:textSize="20sp"
        android:background="@drawable/add_board"
        android:layout_below="@id/addBoardHeading"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/categori_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리 선택"
        android:layout_marginTop="24sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/titleEditText"
        android:fontFamily="@font/medium"
        android:textColor="@color/colormain"
        android:textSize="24sp"
        />


    <Button
        android:id="@+id/spt_selected_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:layout_weight="1"
        android:text="Sports"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@+id/categori_title"
        />
    <Button
        android:id="@+id/espt_selected_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/spt_selected_btn"
        android:text="e-Sports"
        android:fontFamily="@font/medium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@+id/categori_title"
        android:backgroundTint="@color/colornoselecte"

        ></Button>


    <Spinner
        android:id="@+id/spt_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:entries="@array/categori_spt"
        android:fontFamily="@font/medium"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@+id/spt_selected_btn">

    </Spinner>
<Spinner
    android:id="@+id/espt_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:entries="@array/categori_epst"
    android:fontFamily="@font/medium"
    android:padding="12dp"
    android:textSize="20sp"
    android:layout_below="@+id/spt_selected_btn"
    android:visibility="invisible"
    >
</Spinner>






    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="내용을 작성해주세요."
        android:fontFamily="@font/medium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="18sp"
        android:background="@drawable/add_board"
        android:layout_below="@id/spt_spinner"
        />
