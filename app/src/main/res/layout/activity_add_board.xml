    <Button
        android:id="@+id/cobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colornoselecte"
        android:hint="작성완료"
        android:fontFamily="@font/medium"
        android:textSize="20dp"
      />





</RelativeLayout>