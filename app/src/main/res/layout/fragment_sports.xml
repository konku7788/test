<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sportsFragment">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:layout_above="@+id/nav_division"
        android:background="#FFF0F8FF"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />


    <LinearLayout
        android:id="@+id/spt_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/soccer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colormain"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="축구">

        </Button>
        <Button
            android:id="@+id/futsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/colornoselecte"
            android:textStyle="bold"
            android:text="풋살"
            >

        </Button>
        <Button
            android:id="@+id/basketball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/colornoselecte"
            android:textStyle="bold"
            android:text="농구">

        </Button>
        <Button
            android:id="@+id/spt_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/colornoselecte"
            android:textStyle="bold"
            android:text="기타">

        </Button>


    </LinearLayout>
    <View
        android:layout_above="@+id/nav_division"
        android:background="#FFF0F8FF"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <FrameLayout
        android:id="@+id/spt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>